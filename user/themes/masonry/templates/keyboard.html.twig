{% embed 'partials/base.html.twig' %}

{% block body %}
<body class="post-template nav-closed" itemscope itemtype="http://schema.org/Article">
{% endblock %}

{% block content %}

{% include 'partials/header.html.twig' %}

<main class="content" role="main">
    <article class="post">
        <header class="post-header">
            <!-- {% include 'partials/breadcrumbs.html.twig' %} -->
            <h1 class="post-title">{{page.title}}</h1>
			<h5 class="post-subtitle">{{ page.header.subtitle }}</h5>
            <section class="post-meta">
               <time class="post-date" datetime="{{ page.date | date(site.date_short) }}">Last Update: {{ page.date | date(site.date_short) }}</time>
                {% if page.taxonomy.tag|length > 0 %}
                    on {% for tag in page.taxonomy.tag %}<span class="post-tag-{{tag}}"><a href="{{ base_url }}/tag{{ config.system.param_sep }}{{ tag }}">{{ tag }}</a></span>{%if not loop.last %}, {% endif %}{% endfor %}
                {% endif %}
            </section>
        </header>

		<nav class="keyboard-nav">
			<ul>
				<li><a href="#buy">Where to Buy &nbsp;- &nbsp;<i class="fa fa-usd" aria-hidden="true"></i></a></li>
				<li><a href="#albums">Build Logs &amp; Albums &nbsp;- &nbsp;<i class="fa fa-camera" aria-hidden="true"></i></a></li>
				<li><a href="#program">How to Program &nbsp;- &nbsp;<i class="fa fa-code" aria-hidden="true"></i></a></li>
				<li><a href="#mods">Mods &amp; Addons &nbsp;- &nbsp;<i class="fa fa-wrench" aria-hidden="true"></i></a></li>
				<li><a href="#misc">More Info &nbsp;- &nbsp;<i class="fa fa-info" aria-hidden="true"></i></a></li>
				<li><a href="#gallery">Gallery &nbsp;- &nbsp;<i class="fa fa-picture-o" aria-hidden="true"></i></a></li>				
			</ul>
		
		</nav>		
		
        <section class="specs">
			<h3>Quick Specs :::</h3>
			 {% if page.taxonomy.creator|length > 0 %}
                    <span class="post-creator"><strong>Creator(s):</strong> {% for creator in page.taxonomy.creator %}{{ creator }}{%if not loop.last %}, {% endif %}{% endfor %}</span>
                {% endif %}<br>
			 {% if page.taxonomy.size|length > 0 %}
                    <span class="post-size"><strong>Size: </strong>{% for size in page.taxonomy.size %}{{ size }}</span>{%if not loop.last %}, {% endif %}{% endfor %}
                {% endif %}<br>
			 {% if page.taxonomy.price|length > 0 %}
                    <span class="post-price"><strong>Price Range: </strong>{% for price in page.taxonomy.price %}{{ price }}</span>{%if not loop.last %}, {% endif %}{% endfor %}
                {% endif %}<br>
			 {% if page.taxonomy.build|length > 0 %}
                    <span class="post-build"><strong>Build Options: </strong>{% for build in page.taxonomy.build %}{{ build }}</span>{%if not loop.last %}, {% endif %}{% endfor %}
                {% endif %}<br>
			 {% if page.taxonomy.switch|length > 0 %}
                    <span class="post-switch"><strong>Switch Compatability: </strong>{% for switch in page.taxonomy.switch %}{{ switch }}</span>{%if not loop.last %}, {% endif %}{% endfor %}
                {% endif %}<br>
			 {% if page.taxonomy.layout|length > 0 %}
                    <span class="post-layout"><strong>Key Stagger: </strong>{% for layout in page.taxonomy.layout %}{{ layout }}</span>{%if not loop.last %}, {% endif %}{% endfor %}
                {% endif %}<br>
			 {% if page.taxonomy.lighting|length > 0 %}
                    <span class="post-lighting"><strong>Lighting Options: </strong>{% for lighting in page.taxonomy.lighting %}{{ lighting }}</span>{%if not loop.last %}, {% endif %}{% endfor %}
                {% endif %}<br>
			 {% if page.taxonomy.programmability|length > 0 %}
                    <span class="post-programmability"><strong>Programmability: </strong>{% for programmability in page.taxonomy.programmability %}{{ programmability }}</span>{%if not loop.last %}, {% endif %}{% endfor %}
                {% endif %}<br>
			 {% if page.taxonomy.availability|length > 0 %}
                    <span class="post-availability"><strong>Availability: </strong>{% for availability in page.taxonomy.availability %}{{ availability }}</span>{%if not loop.last %}, {% endif %}{% endfor %}
                {% endif %}<br>
			 {% if page.taxonomy.first|length > 0 %}
                    <span class="post-first"><strong>First Appearance: </strong>{% for first in page.taxonomy.first %}{{ first }}{%if not loop.last %}, {% endif %}{% endfor %}
                {% endif %}<br>
		</section>
	
		<div class="clearfix">
		<section class="post-content">
            {{content}}
			
			<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
			<ins class="adsbygoogle"
				 style="display:block; text-align:center;"
				 data-ad-layout="in-article"
				 data-ad-format="fluid"
				 data-ad-client="ca-pub-0522058087016585"
				 data-ad-slot="6111023847"></ins>
			<script>
				 (adsbygoogle = window.adsbygoogle || []).push({});
			</script>
			
            <div id="disqus_thread"></div>
            <noscript><a href="https://disqus.com/?ref_noscript" rel="nofollow">{{ 'THEME_MASONRY.DISQUS.NOSCRIPT'|t }}</a></noscript>
			{% include 'partials/comments.html.twig' with {'page': page} %}
        </section>

        <footer class="post-footer">
            {%if site.author %}
                {%if site.author.image %}
                    <figure class="author-image">
                        <a class="img" href="{{base_url}}" style="background-image: url({{ theme_url }}/images/{{ site.author.image }})">
                            <span class="hidden">{{site.author.name}}'s Picture</span>
                        </a>
                    </figure>
                {% endif %}
        <section class="author">
           {%if page.taxonomy.author %}
              {% for author in page.taxonomy.author %}
                 <h4><a href="{{base_url}}/author:{{ author }}">{{ author }}</a></h4>
                 <p><a href="{{base_url}}/author:{{ author }}">{{ 'THEME_MASONRY.BLOG.POST.MORE.SPEC_AUTHOR'|t }} {{ author }}.</a></p>
              {% endfor %}
           {% else %}
              <h4><a href="{{base_url}}">{{site.author.name}}</a></h4>
              {%if site.author.bio %}
                 <p>{{site.author.bio}}</p>
              {% else %}
                 <p><a href="{{base_url}}">{{ 'THEME_MASONRY.BLOG.POST.MORE.AUTHOR'|t }}</a></p>
              {% endif %}
           {% endif %}
           <div class="author-meta">
           {% if site.author.location %}<span class="author-location icon-location">{{site.author.location}}</span>{% endif %}
           {% if site.author.website %}<span class="author-link icon-link"><a href="{{site.author.website}}">{{site.author.website}}</a></span>{% endif %}
           </div>
        </section>
            {% endif %}

            <section class="share">
                <h4>{{ 'THEME_MASONRY.BLOG.POST.SHARE'|t }}</h4>
                <a class="icon-twitter" href="https://twitter.com/share?text={{page.title | escape}}&amp;url={{page.url(true)}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <span class="hidden">Twitter</span>
                </a>
                <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{page.url(true)}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <span class="hidden">Facebook</span>
                </a>
                <a class="icon-google-plus" href="https://plus.google.com/share?url={{page.url(true)}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <span class="hidden">Google+</span>
                </a>
            </section>
           {% if config.plugins.comments.enabled %}
              {% include 'partials/comments.html.twig' with {'page': page} %}
           {% endif %}
        </footer>

    </article>
</main>

<aside class="read-next">
    {% if not page.isFirst %}
    <a class="read-next-story {% if page.nextSibling.header.image %}" style="background-image: url({{ page.nextSibling.media[page.nextSibling.header.image].url }}){% else %}no-cover{% endif %}" href="{{page.nextSibling.url}}">
        <section class="post">
            <h2>{{page.nextSibling.title}}</h2>
            <p>{{ page.nextSibling.content | striptags | truncate(140) }}&hellip;</p>
        </section>
    </a>
    {% endif %}
    {% if not page.isLast %}
    <a class="read-next-story prev {% if page.prevSibling.header.image %}" style="background-image: url({{ page.prevSibling.media[page.prevSibling.header.image].url }}){% else %}no-cover{% endif %}" href="{{page.prevSibling.url}}">
        <section class="post">
            <h2>{{page.prevSibling.title}}</h2>
            <p>{{ page.prevSibling.content | striptags | truncate(140) }}&hellip;</p>
        </section>
    </a>
    {% endif %}
</aside>


{% endblock %}

{% block bottom %}

    {% if site.disqus %}
        <script>
        (function() {
        var d = document, s = d.createElement('script');
        s.src = '//{{site.disqus}}.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
        })();
        </script>
    {% endif %}

{% endblock %}

{% endembed %}
